{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2017"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "declaration": true,
        "types": [
            "node"
        ],
        "target": "es2017",
        "moduleResolution": "node",
        "watch": true,
        "forceConsistentCasingInFileNames": true
    }
}